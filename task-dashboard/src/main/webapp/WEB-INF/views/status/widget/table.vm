<div class="container">
	<div class="row">
		<div class="table-responsive" id="status_list">
			#springMessage("tip.loading")
		</div>
	</div>
</div>
<script type="text/javascript">
	require([	  "jquery","template","messenger", "job/status", "utils/table"],
		function(jQuery,  template,   messenger,    status,            table){
		
			status.table.init({
				tpl:{
					"table":"tpl_status_list"
				},
				renderTo:"status_list",
				url:"#springUrl('/status/page.do')",
				pager:{
					start:0,
					limit:20
				}
			});
			
			status.table.search({"jobName":"$!{jobName}"});
			
		}
	);
</script>

tb.status.jobname=任务ID
tb.status.gmt.basetime=基准时间
tb.status.result=执行结果
tb.status.runtime=执行时间
tb.status.gmt.trigger=触发时间
tb.status.error.msg=错误内容
tb.status.node.key=执行IP


<script id="tpl_definition_list" type="text/html">
	<table class="table table-hover table-bordered">
		<thead>
		<tr class="active">
			<th class="text-center" width="10">#</th>
			<th class="text-center" >#springMessage('tb.status.jobname')</th>
			<th class="text-center" >#springMessage('tb.status.gmt.basetime')</th>
			<th class="text-center" >#springMessage('tb.status.result')</th>
			<th class="text-center">#springMessage('tb.status.gmt.trigger')</th>
			<th class="text-center" >#springMessage('tb.status.error.msg')</th>
			<th class="text-center" >#springMessage('tb.status.node.key')</th>
            <th class="text-center" width="50"></th>
		</tr>
		</thead>
		<tbody>
		{{each records as status i}}
		<tr >
			<td>
				{{i+1}}
			</td>
			<td >{{status.jobName}}</td>
			<td >{{definition.cron}}</td>
			<td >{{definition.jobClasspath}}</td>
			<td >{{definition.jobClassName}}</td>
			<td >{{definition.singleRunning}}</td>
			<td >{{definition.singleRunning}}</td>
			<td >
			{{if definition.isInUse == 0}}
			<button type="button" class="btn btn-success btn-xs act-run" model-id="{{definition.id}}" model-isinuse="{{definition.isInUse}}">
				<span class="glyphicon glyphicon-play"></span>
			</button>
			{{/if}}
			{{if definition.isInUse == 1}}
			<button type="button" class="btn btn-warning btn-xs act-run" model-id="{{definition.id}}" model-isinuse="{{definition.isInUse}}">
				<span class="glyphicon glyphicon-stop"></span>
			</button>
			{{/if}}
			<button type="button" class="btn btn-danger btn-xs act-delete" model-id="{{definition.id}}">
				<span class="glyphicon glyphicon-remove"></span>
			</button>
			</td>
		</tr>
		{{/each}}
		</tbody>
	</table>
</script>

#parse("/tpl/util/table.pager.bar.vm")